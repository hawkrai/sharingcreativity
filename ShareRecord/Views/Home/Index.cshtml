@{
    ViewBag.Title = "Слоник синий";
	Layout = "../Shared/_Layout.cshtml";
}

@section header{
<h1>
	Доска творчества
</h1>
	
}

<div class="row" style="width: auto">
	<div class="col-lg-3 col-xs-6">
		<div class="small-box bg-aqua">
			<div class="inner" style="cursor: pointer" >
				<i class="fa fa-paint-brush fa-7x"></i>
			</div>
		</div>
	</div><!-- ./col -->
	<div class="col-lg-3 col-xs-6">
		<!-- small box -->
		<div class="small-box bg-green">
			<div class="inner" style="cursor: pointer">
				<i class="fa fa-music fa-7x"></i>
			</div>
		</div>
	</div><!-- ./col -->
	<div class="col-lg-3 col-xs-6">
		<!-- small box -->
		<div class="small-box bg-yellow">
			<div class="inner" style="cursor: pointer">
				<i class="fa fa-video-camera fa-7x"></i>
			</div>
		</div>
	</div><!-- ./col -->
	<div class="col-lg-3 col-xs-6">
		<!-- small box -->
		<div class="small-box bg-red">
			<div class="inner" style="cursor: pointer">
				<i class="fa fa-bars fa-7x"></i>
			</div>
		</div>
	</div><!-- ./col -->
</div>
<div>
	<div class="box box-primary" style="position: relative;">

		<div class="box-body chat">
			<div class="item">
				<img src="/images/avatar3.png" alt="user image" class="offline">
				<p class="message">
					<a href="#" class="name">
						<small class="text-muted pull-right"><i class="fa fa-clock-o"></i> 5:15</small>
						Синий слоник
					</a>
					Мой первый пост
				</p>
			</div>
			<div style="max-width: 300px">
				<img src="http://2.bp.blogspot.com/-0qwfi1OdNuI/UBLmkXUwWsI/AAAAAAAAGAA/ICuERr0C4Hk/s400/%D1%81%D0%BB%D0%BE%D0%BD%D0%B8%D0%BA+%D0%B4%D0%BB%D1%8F+%D1%88%D1%82%D0%B0%D0%BC%D0%BF%D0%B0.png" />
			</div>
		</div><!-- /.box-body -->
		<div class="box-footer clearfix no-border">
			<div class="input-group">
				<input class="form-control" placeholder="Оставить комментарий...">
				<div class="input-group-btn">
					<button class="btn btn-success"><i class="fa fa-plus"></i></button>
				</div>
			</div>
		</div>
	</div>
	<div class="box box-primary" style="position: relative;">
		<div class="box-body chat">
			<div class="item">
				<img src="/images/avatar3.png" alt="user image" class="online">
				<p class="message">
					<a href="#" class="name">
						<small class="text-muted pull-right"><i class="fa fa-clock-o"></i> 5:15</small>
						Синий слоник
					</a>
					Мой второй пост
				</p>
			</div>
			<div style="max-width: 300px">
				<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQRFw8_vnw-D4iolUil2EV9PeKPy93NHzh5OLfVGR-Nt8keUJ4Y" />
			</div>
		</div><!-- /.box-body -->
		<div class="box-footer clearfix no-border">
			<div class="input-group">
				<input class="form-control" placeholder="Оставить комментарий...">
				<div class="input-group-btn">
					<button class="btn btn-success"><i class="fa fa-plus"></i></button>
				</div>
			</div>
		</div>
	</div>	
</div>
